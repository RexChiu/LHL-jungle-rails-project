<% user = User.find_by(id: review.user_id) %>
<div>
  <dt>Reviewer</dt>
  <dd><%= user.first_name %></dd>
  <dt>Description</dt>
  <dd><%= review.description %></dd>
  <dt>rating</dt>
  <dd><%= review.rating %></dd>
  <% if current_user %>
    <% if user.id == current_user.id %>
      <%= link_to "Delete", product_review_path(@product.id, review.id), :confirm => "Are you sure you want to delete this attachment?", :method => :delete %>
    <% end %>
  <% end %>
  <br>
</div>